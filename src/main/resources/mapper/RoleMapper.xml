<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ambow.dao.RoleDao">

	<select id="getAllRole" resultType="Role">
		select * from role
	</select>
	<select id="getRoleById" resultType="Role">
		select * from role where role_id =#{id}
	</select>
	<insert id="newRole">
		insert into role (role_id,role_name,role_desc,state)
		values
		(#{roleId},#{roleName},#{roleDesc},#{state})
	</insert>
	<delete id="deleteRole">
		delete from role where role_id =#{id}
	</delete>
	<update id="updateRole">
		update role
		<set>
			<if test="roleName!=null">role_name=#{roleName},</if>
			<if test="roleDesc!=null">role_desc=#{roleDesc},</if>
			<if test="state!=null">state=#{state},</if>
		</set>
		where role_id = #{roleId}
	</update>
</mapper>