<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ambow.dao.EmpinfoDao">
	<insert id="newEmpInfo" parameterType="Empinfo">
		insert into Empinfo(emp_id,login_name,emp_name,emp_sex,entry_date,emp_tel,emp_address,remark,role_id,password)
		values(#{empId},#{loginName},#{empName},#{empSex},NOW(),#{empTel},#{empAddress},#{remark},#{roleId},#{password});
	</insert>
	
	<update id="updateEmpInfo">
		update Empinfo
		<set>
			<if test="loginName!=null">login_name = #{loginName},</if>
			<if test="empName!=null">emp_name = #{empName},</if>
			<if test="empSex!=null">emp_sex = #{empSex},</if>
			<if test="entryDate!=null">entry_date = #{entryDate},</if>
			<if test="empTel!=null">emp_tel = #{empTel},</if>
			<if test="empAddress!=null">emp_address = #{empAddress},</if>
			<if test="remark!=null">remark = #{remark},</if>
			<if test="roleId!=null">role_id = #{roleId},</if>
			<if test="password!=null">password = #{password},</if>
		</set>
		where emp_id = #{empId}
	</update>
	
	<delete id="deleteEmpinfoById">
		delete from Empinfo where emp_id = #{empId}
	</delete>
	
	<select id="getEmpinfoById" parameterType="int" resultType="Empinfo">
		select * from Empinfo where emp_id = #{empId};
	</select>
	<select id="getEmpinfoByLoginName" parameterType="String" resultType="Empinfo">
		select * from Empinfo where login_name=#{loginName};
	</select>
	<select id="getAllEmpinfo" resultType="Empinfo">
		select * from Empinfo 
	</select>
</mapper>