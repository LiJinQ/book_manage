<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ambow.dao.BackmatterDao">
	<insert id="newBackmatter" parameterType="Backmatter">
		insert into Backmatter(backmatter_id,backmatter_type,backmatter_name,book_id)
		values(#{backmatterId},#{backmatterType},#{backmatterName},#{bookId});
	</insert>
	
	<update id="updateBackmatter">
		update Backmatter
		<set>
			<if test="backmatterType!=null">backmatter_type = #{backmatterType},</if>
			<if test="backmatterName!=null">backmatter_name = #{backmatterName},</if>
			<if test="bookId!=null">book_id = #{bookId},</if>
		</set>
		where backmatter_id = #{backmatterId}
	</update>
	
	<delete id="deleteBackmatterById">
		delete from Backmatter where backmatter_id = #{backmatterId}
	</delete>
	
	<select id="getBackmatterById" parameterType="int" resultType="Backmatter">
		select * from Backmatter where backmatter_id = #{backmatterId};
	</select>
	<select id="getAllBackmatter" resultType="Backmatter">
		select * from Backmatter 
	</select>
</mapper>